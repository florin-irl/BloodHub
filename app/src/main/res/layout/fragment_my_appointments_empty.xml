<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_new_appointment"
            android:layout_width="@dimen/extra_extra_large_125"
            android:layout_height="@dimen/extra_extra_large_125"
            android:src="@drawable/new_appointment_drawable" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_150"
            android:fontFamily="@font/poppins"
            android:text="@string/no_future_appointments"
            android:textAlignment="center"
            android:textSize="28sp"/>



    </LinearLayout>

</LinearLayout>